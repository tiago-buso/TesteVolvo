@using TesteVolvo.DTOs
@model IEnumerable<TruckDto>

@{
    ViewData["Title"] = "Caminhões";
}

<h1>Caminhões</h1>

<div class="form-group text-end">
    @Html.ActionLink("Criar um novo caminhão", "Create", "Truck" , null, htmlAttributes: new {@class="btn btn-primary"})   
</div>

<br />
<br />
 
@if(Model != null && Model.Any())
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TruckModelDto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfManufacture)
            </th>
            <th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TruckModelDto.TruckModelFormatted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfManufacture)
            </td>           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
    }

    </tbody>
    </table>

}
else
{
    <div class="row">
        <div class="col-md-12">
             <div class="alert alert-warning mb-3" role="alert">
                Não foi encontrado registros de caminhões
            </div>
        </div>
    </div>
  
}